# Docker Compose Environment Variables
# Copy this file to .env to customize your Docker setup

# MongoDB Root Credentials (for admin access)
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=adminpassword

# MongoDB Database Name
MONGO_DATABASE=quiz-api

# MongoDB App User Credentials (used by the Express app)
MONGO_APP_USER=quiz_user
MONGO_APP_PASSWORD=quiz_password

# Note: The app will automatically use these credentials
# Connection string is built as: mongodb://${MONGO_APP_USER}:${MONGO_APP_PASSWORD}@mongodb:27017/${MONGO_DATABASE}
